.scoreboard.scene
  = render partial: 'shared/timers'
  .scoreboard-holder
    %table.names
      %thead
        %tr
          %th team
          %th
          %th flags
      %tbody#scoreboard_body{data: {refresh_path: scoreboard_path(format: :json, refresh: rand(1_000_000)), refresh_interval: 15_000} }
        - place = 0
        - prev_score = Flag.count + 1
        - place_buf = 1
        - @teams.each do |t|
          - score = t[:score].to_i
          - if score < prev_score
            - place += place_buf
            - place_buf = 1
            - prev_score = score
          - else
            - place_buf = 1
          %tr
            %th= t[:name]
            %td.logo
              =image_tag "teams/#{t[:id]}.png", width: '16px', height: '16px'
            %td.flags
              .points.left= score
              .bar.left{style: "width: #{0.003 * score}em"} &nbsp;
              %br.clear
%script#team_row_template{type: 'text/html'}
  %tr
    %th {{team}}
    %td.logo {{{logo}}}
    %td.flags
      .points.left {{score}}
      .bar.left{style: "width: {{width}}em"} &nbsp;
      %br.clear
%script#team_logos{type: 'text/html'}
  - @teams.each do |t|
    %div{id: "logo_#{t[:id]}"}
      =image_tag "teams/#{t[:id]}.png", width: '16px', height: '16px'
